<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/Logowanie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="@string/logowanie"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Login_pls"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/wpisz_nazw_u_ytkownika"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Haslo_pls"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/wpisz_has_o"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Login"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_row="1"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/Zaloguj"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="@string/zaloguj" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="236dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowSpan="2"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/Captcha"
        android:layout_width="190dp"
        android:layout_height="131dp"
        android:layout_row="3"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text"
        android:text="Tekst z obrazka" />

    <EditText
        android:id="@+id/Haslo"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_row="2"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button2"
        android:layout_width="189dp"
        android:layout_height="83dp"
        android:layout_row="4"
        android:layout_column="1"
        android:text="@string/nie_jestem_robotem" />

</GridLayout>