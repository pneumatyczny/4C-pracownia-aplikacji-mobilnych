<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/Rejestracja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="@string/logowanie"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Login_pls"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/wpisz_nazw_u_ytkownika"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Haslo_pls"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/wpisz_has_o"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Login"
        android:layout_width="190dp"
        android:layout_height="64dp"
        android:layout_row="1"
        android:layout_column="1"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/Haslo"
        android:layout_width="190dp"
        android:layout_height="84dp"
        android:layout_row="2"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/powt_rz_has_o" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="190dp"
        android:layout_height="86dp"
        android:layout_row="3"
        android:layout_column="1"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="@string/zaloguj" />

</GridLayout>