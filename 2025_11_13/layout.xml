<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/Background">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Rejestracja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logowanie"
            android:textSize="30sp"
            style="@style/Title" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Login_pls"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:text="@string/wpisz_nazw_u_ytkownika"
            android:textSize="20sp"
            style="@style/MyStyle"/>

        <EditText
            android:id="@+id/Login"
            android:layout_width="190dp"
            android:layout_height="64dp"
            android:ems="10"
            android:inputType="text" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/Haslo_pls"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/wpisz_has_o"
            android:textSize="20sp"
            style="@style/MyStyle"/>

        <EditText
            android:id="@+id/Haslo"
            android:layout_width="190dp"
            android:layout_height="84dp"
            android:ems="10"
            android:inputType="textPassword" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/powt_rz_has_o"
            android:textSize="20sp"
            style="@style/MyStyle"/>

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="190dp"
            android:layout_height="86dp"
            android:ems="10"
            android:inputType="textPassword" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zaloguj"/>
    </TableRow>
</TableLayout>